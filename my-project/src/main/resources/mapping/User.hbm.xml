<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="course.model.data.entity.users.User" table="users"
        catalog="mywebapp">
        <id name="idUser" type="java.lang.Integer" access="field">
            <column name="id_user" />
            <generator class="native" />
        </id>
        <property name="nickName" type="string">
            <column name="nick_name" length="30" not-null="true"
                unique="true" />
        </property>
        <property name="login" type="string">
            <column name="login" length="30" not-null="true"
                unique="true" />
        </property>
        <property name="password" type="string">
            <column name="password" length="30" not-null="true" />
        </property>
        <property name="email" type="string">
            <column name="email" length="30" not-null="true"
                unique="true" />
        </property>
        <property name="role">
            <column name="role" not-null="true" />
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">course.model.data.entity.users.fields.Role</param>
            </type>
        </property>
        <property name="language">
            <column name="language" not-null="true" />
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">course.model.data.entity.users.fields.Language</param>
            </type>
        </property>
        <property name="stile">
            <column name="stile" not-null="true" />
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">course.model.data.entity.users.fields.Stile</param>
            </type>
        </property>
        <property name="idAvatar" type="java.lang.Integer">
            <column name="id_avatar" not-null="true" default="0" />
        </property>
        <property name="shortDescription" type="string">
            <column name="short_description" length="200" />
        </property>
        <set name="events"
            table="user_events" cascade="all">
            <key column="id_user" />
            <many-to-many column="id_event" class="course.model.data.entity.events.Event"/>
        </set>
        <set name="categories"
            table="user_categories" cascade="all">
            <key column="id_user" />
            <many-to-many column="id_category" class="course.model.data.entity.categories.Category"/>
        </set>
        <set name="avatars"
            table="user_avatars" cascade="all">
            <key column="id_user" />
            <many-to-many column="id_avatar" class="course.model.data.entity.avatars.Avatar"/>
        </set>
    </class>
</hibernate-mapping>