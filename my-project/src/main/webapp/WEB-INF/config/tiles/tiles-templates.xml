<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

    <!-- Templates -->
    <definition name="base-template" template="/WEB-INF/templates/base-template.jsp">
        <put-attribute name="title" value="Default title" />
        <put-attribute name="head_base"
            value="/WEB-INF/templates/head_base.jsp" />
        <put-attribute name="header"
            value="/WEB-INF/templates/headers/default_header.jsp" />
        <put-attribute name="content" value="" />
        <put-attribute name="footer"
            value="/WEB-INF/templates/footers/default_footer.jsp" />
    </definition>

    <!-- Welcome Page -->
    <definition name="welcome" extends="base-template">
        <put-attribute name="title" value="Welcome" />
        <put-attribute name="content"
            value="/WEB-INF/templates/contents/welcome/welcome_content.jsp" />
    </definition>

</tiles-definitions>